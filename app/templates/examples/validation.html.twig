{% extends 'layouts/base.html.twig' %}

{% block title %}/ Form validation{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>Welcome!</h1>
    </div>

    <div class="row">
        <div class="col-md-12">
            <p class="lead">
                This example shows how forms are validated and rendered with the corresponding error messages.
            </p>
            <div class="panel panel-default">
                <div class="panel-heading">Login</div>
                <div class="panel-body">
                    {% if isValid %}
                        <p class="lead bg-success text-center">Everything passed validation!</p>
                    {% endif %}
                    {% include 'forms/sign-up.html.twig' %} {# The sign-up form with validation errors, if any #}
                </div>
            </div>
        </div>
    </div>
{% endblock %}