{% extends 'layouts/base.html.twig' %}

{% block title %}/ CRSF tokens examples{% endblock %}

{% block content %}
<div class="page-header">
    <h1>Welcome!</h1>
</div>

<div class="row">
    <div class="col-md-12">
        <p class="lead">This example shows how to render and validate CSRF tokens</p>
        <div class="panel panel-default">
            <div class="panel-heading">Login</div>
            <div class="panel-body">
                {% if isValid %}
                    <p class="lead bg-success text-center">Everything passed validation!</p>
                {% endif %}
                {% include 'forms/login.html.twig' %}
            </div>
        </div>
    </div>
</div>

{% endblock %}
