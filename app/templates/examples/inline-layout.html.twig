{% extends 'layouts/base.html.twig' %}

{% form_theme _self %}

{%- block money -%}
    <div class="input-group"><div class="input-group-addon">$</div>
        {%- set options = options|merge({'block': 'input'}) -%}
        {{- element(element, attr, options) -}}
        <div class="input-group-addon">.00</div></div>
{%- endblock money -%}

{% block content %}
    <div class="page-header">
        <h1>Welcome!</h1>
    </div>

    <div class="row">
        <div class="col-md-12">
            <p>This example shows the rendering of a form using the inline layout.</p>
            <div class="panel panel-default">
                <div class="panel-heading">Add product to catalog</div>
                <div class="panel-body">
                    {% include 'forms/add-product.html.twig' %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
